/*-------------FOOTER-------------------*/
footer {
    background-color: #24252A;
    text-align: center;
    display: grid;
    border: black 2px solid;
    color: snow;
    margin-top: 6%;
    padding: 10px;
}
#footerSplit {
    display:grid;
    grid-template-columns: 50% 50%; 
    font-family: "Montserrat", sans-serif;
    position: absolute;
    margin-top: 5px;
    width: 98.5%;
    height: 25px;
    text-align: center;
    color:snow;
    font-size: 25px;
}
#footerSplit > div {
    background-color:  #24252A;
    color: snow;
    font-family: "Montserrat", sans-serif;
}
#footerSplit > div:nth-child(even) {
    background-color: #24222A;
}

